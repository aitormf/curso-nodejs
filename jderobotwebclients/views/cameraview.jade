extends layout

block css
  link(rel='stylesheet', href='css/bootstrap.min.css')
  link(href='css/cameraview.css', rel='stylesheet')

block js
 script(src='js/jquery.min.js')
 script(src='js/bootstrap.min.js')
 script(src='js/api.js')
 script(src='js/cameraview.js')
 script(src='js/cameraviewWeb.js')
 
block content
  include includes/header
  div#body.container
    div.row
      div#buttons.col-xs-12.col-sm-12.col-md-12.col-lg-12
        p
          button#start(type="button", class="btn btn-md btn-success") Start
          button#stop(type="button", class="btn btn-md btn-danger") Stop
          button#config(type="button", class="btn btn-info", data-toggle="modal", data-target="#configure") Config
    div.row
      div.col-xs-12.col-sm-8.col-md-6.col-lg-4.col-lg-offset-4.col-md-offset-2
        div.border-carbon.panel.panel-info
          div.letrero.panel-heading.hidden-sm.hidden-xs
            span.panel-title Camera
          div.panel-body.padding0.border-blue.container-fluid
            canvas#camView.col-xs-12.col-sm-12.col-md-12.col-lg-12.cam Your browser does not support the HTML5 canvas tag
      div.col-xs-12.col-sm-2.col-md-2.col-lg-2
        div.border-carbon.panel.panel-info
          div.letrero.panel-heading.hidden-sm.hidden-xs
            span.panel-title Information
          div.panel-body.border-blue.container-fluid
            p
              span.bold FPS: 
              span#fps
            p
            span.bold Size: 
            span#size
      

  div.modal.fade#configure(tabindex="-1", role="dialog", aria-labelledby="configLabel")
    div.modal-dialog(role="document")
      div.modal-content
        div.modal-header
          button(type="button", class="close", data-dismiss="modal", aria-label="Close")
            span(aria-hidden="true") &times;
          h4.modal-title#configLabel CameraView Config
        div.modal-body
          div.input-group
            span.input-group-addon Addr
            input#dir(type="text", class="form-control", placeholder="Address", value="localhost", aria-describedby="basic-addon1")
          br
          div.input-group
            span.input-group-addon Port
            input#port(type="number", class="form-control", value="11000", aria-describedby="basic-addon1")
          br
          div.input-group
            span.input-group-addon EndPoint
            input#ep(type="text", class="form-control", value="cameraA", aria-describedby="basic-addon1")
        div.modal-footer
          button(type="button", class="btn btn-warning", data-dismiss="modal") Close
          button#save(type="button", class="btn btn-success", data-dismiss="modal") Save changes
